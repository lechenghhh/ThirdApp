<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_login"
        android:orientation="vertical"
        android:padding="@dimen/fab_margin">

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="请输入账号："
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_cloudy" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/tranBlack"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textSize="13dp"
                    android:background="@drawable/style_bg_color"
                    android:hint="在此输入账号"
                    android:paddingLeft="12dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white1" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <View
            style="@style/style_v_line1"
            android:layout_marginTop="6dp"
            android:background="@color/white1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="请输入密码："
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_rain" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/tranBlack"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <EditText
                    android:id="@+id/etPwd"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:layout_height="36dp"
                    android:background="@drawable/style_bg_color"
                    android:hint="在此输入密码"
                    android:paddingLeft="12dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white1" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <View
            style="@style/style_v_line1"
            android:layout_marginTop="6dp"
            android:background="@color/white1" />

        <Button
            android:id="@+id/btnReturn"
            style="@style/style_btn_blue1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="@dimen/fab_margin"
            android:text="登陆" />
    </LinearLayout>
</ScrollView>
