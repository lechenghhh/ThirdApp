<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/house_et_url"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/style_et1"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/colorGray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/webview_goto"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/style_et1"
            android:gravity="center"
            android:text="进入"
            android:textColor="@color/colorGray" />
    </LinearLayout>


    <View style="@style/style_v_line2" />


    <WebView
        android:id="@+id/house_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical">

        <View style="@style/style_v_line2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/webview_backhomeaty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ic_cloudy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="退出"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/webview_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_broken_sky" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="上一页"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/webview_refresh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_rain" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="刷新"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/webview_stop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ic_snow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="停止"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/webview_forward"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="进入" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>