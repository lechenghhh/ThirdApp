<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/fab_margin"
        tools:context="com.lecheng.hello.thirdapp.ActivityList.Aty033UploadFile_3">

        <android.support.v7.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/purple1"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray1" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv1"
            style="@style/style_tv_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="服务器Url：" />

        <TextView
            android:id="@+id/tv2"
            style="@style/style_tv_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="资源文件Uri：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSelect"
                style="@style/style_btn_red1"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_weight="1"
                android:text="选择文件" />

            <Button
                android:id="@+id/btnTakePic"
                style="@style/style_btn_green1"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_weight="1"
                android:text="拍摄照片" />
        </LinearLayout>

        <Button
            android:id="@+id/btnUpload"
            style="@style/style_btn_blue1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="上传至Node" />
    </LinearLayout>
</ScrollView>
