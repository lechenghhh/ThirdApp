<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/fab_margin">

        <Button
            android:id="@+id/btnRoot"
            style="@style/style_btn_red1"
            android:text="获取root权限"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnShell"
                style="@style/style_btn_green1"
                android:layout_width="72dp"
                android:text="shell Send"
                android:textSize="10dp"/>
        </LinearLayout>

        <TextView
            style="@style/style_tv_screen"
            android:layout_height="200dp"/>

        <Button
            android:id="@+id/btn1"
            style="@style/style_btn_blue1"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="模拟 音量+"/>

        <Button
            android:id="@+id/btn2"
            style="@style/style_btn_blue1"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="模拟 音量-"/>

        <Button
            android:id="@+id/btn3"
            style="@style/style_btn_blue1"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="模拟 x50 y50"/>

        <Button
            android:id="@+id/btn4"
            style="@style/style_btn_blue1"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="btn4"/>

        <Button
            style="@style/style_btn_blue1"
            android:layout_marginTop="@dimen/fab_margin"/>

        <Button
            style="@style/style_btn_blue1"
            android:layout_marginTop="@dimen/fab_margin"/>

        <Button
            style="@style/style_btn_blue1"
            android:layout_marginTop="@dimen/fab_margin"/>

        <Button
            style="@style/style_btn_blue1"
            android:layout_marginTop="@dimen/fab_margin"/>
    </LinearLayout>
</ScrollView>
