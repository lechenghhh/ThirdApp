<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lecheng.hello.thirdapp.ActivityList.Aty075Bitmap">

    <LinearLayout
        style="@style/style_ll_vertical"
        android:padding="@dimen/fab_margin">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/tv1"
            style="@style/style_tv_screen" />

        <Button
            android:id="@+id/btn1"
            style="@style/style_btn_red1"
            android:text="原图加载/lru缓存" />

        <TextView
            android:id="@+id/tv2"
            style="@style/style_tv_screen" />

        <Button
            android:id="@+id/btn2"
            style="@style/style_btn_red1"
            android:text="glide加载" />

        <TextView
            android:id="@+id/tv3"
            style="@style/style_tv_screen" />

        <Button
            android:id="@+id/btn3"
            style="@style/style_btn_red1"
            android:text="解码图片" />

        <TextView
            android:id="@+id/tv4"
            style="@style/style_tv_screen" />

        <Button
            android:id="@+id/btn4"
            style="@style/style_btn_red1"
            android:text="生成黑图" />

        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />

    </LinearLayout>
</ScrollView>
