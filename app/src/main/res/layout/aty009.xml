<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/fab_margin"
        tools:context=".ActivityList.Aty009View">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取HashKey:" />

        <EditText
            android:id="@+id/etid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black1" />

        <com.lecheng.hello.thirdapp.Widgets.MyView2
            android:id="@+id/view"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/button4"
            style="@style/style_btn_blue1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit_btnheight"
            android:text="旋转酷炫吧" />

        <com.lecheng.hello.thirdapp.Widgets.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ripplebg"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="@dimen/fab_margin"
            app:rb_color="#0099CC"
            app:rb_duration="3000"
            app:rb_radius="32dp"
            app:rb_rippleAmount="4"
            app:rb_scale="6">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_suspend" />

        </com.lecheng.hello.thirdapp.Widgets.RippleBackground>
    </LinearLayout>
</ScrollView>
