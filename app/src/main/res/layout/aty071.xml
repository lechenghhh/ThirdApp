<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">

    <Button
        android:id="@+id/btnAccessibility"
        style="@style/style_btn_blue1"
        android:text="前往辅助设置开启音量键监听服务"/>

    <Button
        android:id="@+id/btnRegister"
        style="@style/style_btn_green1"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="注册音量键监听"/>

    <Button
        android:id="@+id/btnUnRegister"
        style="@style/style_btn_red1"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="取消注册音量键监听"/>
</LinearLayout>