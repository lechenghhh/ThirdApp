<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="vertical"
    tools:context="com.lecheng.hello.thirdapp.ActivityList.Aty044AliPay">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="http://push.baidu.com/console/0Lzoyo7vGG9fQTk35KkYcxKw?device_type=3#/pushs" />

    <TextView
        android:id="@+id/tv"
        style="@style/style_tv_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnStartWork"
        style="@style/style_btn_blue1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:enabled="false"
        android:text="启动推送" />

    <Button
        android:id="@+id/btnStop"
        style="@style/style_btn_red1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="停止推送" />

    <Button
        android:id="@+id/btnResume"
        style="@style/style_btn_blue1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="恢复推送" />

    <Button
        android:id="@+id/btnSync"
        style="@style/style_btn_blue1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="刷新" />

    <View
        style="@style/style_v_line2"
        android:layout_marginTop="@dimen/fab_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="以下是透传信息显示：" />

    <TextView
        android:id="@+id/tv2"
        style="@style/style_tv_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
