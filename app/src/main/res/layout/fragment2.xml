<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".fragment.Fragment2Fragment">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2anothersFAty"
        android:text="跳转到另一个fragment"
        android:layout_below="@+id/btn2tabAty"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动带有侧边栏的activity"
        android:id="@+id/btn2navigationAty"
        android:layout_alignBaseline="@+id/btn2anothersFAty"
        android:layout_alignBottom="@+id/btn2anothersFAty"
        android:layout_toLeftOf="@+id/btn2anothersFAty"
        android:layout_toStartOf="@+id/btn2anothersFAty" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动Tabed界面"
        android:id="@+id/btn2tabAty"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
