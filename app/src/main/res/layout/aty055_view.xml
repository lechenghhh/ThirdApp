<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:orientation="vertical"
        android:padding="@dimen/fab_margin">

        <com.lecheng.hello.thirdapp.Widgets.MyActionBar
            android:id="@+id/myAB"
            android:layout_width="200dp"
            android:layout_height="0dp"/>

        <com.lecheng.hello.thirdapp.Widgets.SudokuView.SudokuView
            android:id="@+id/sv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.lecheng.hello.thirdapp.Widgets.MyScrollBar
            android:layout_width="280dp"
            android:layout_height="48dp"/>

        <com.lecheng.hello.thirdapp.Widgets.VerificationSeekBar
            android:id="@+id/vsb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxHeight="40dp"
            android:padding="1dp"
            android:progress="0"
            android:progressDrawable="@drawable/bg_seekbar"
            android:thumb="@drawable/bg_seekbar_thumb"
            android:thumbOffset="-1dp"/>

        <com.lecheng.hello.thirdapp.Widgets.SlideButton.SlideButton
            android:id="@+id/sbtn1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1"
                style="@style/style_btn_green1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unit_btnheight"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text="btn1"/>

            <Button
                android:id="@+id/btn2"
                style="@style/style_btn_green1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unit_btnheight"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="btn2"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
