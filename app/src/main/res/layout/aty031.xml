<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pic"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ActivityList.Aty031Blur">

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入内容："
        android:lines="2" />

    <Button
        android:id="@+id/btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="毛玻璃效果//Dialog" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="以上是
        利用bitmap算法对背景图片进行模糊处理"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="背景模糊的FragmentDialog" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/tvH"
        style="@style/style_tv_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="屏幕高度" />

    <TextView
        android:id="@+id/tvW"
        style="@style/style_tv_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="屏幕宽度" />

    <View
        android:id="@+id/v1"
        android:layout_width="400dp"
        android:layout_height="10dp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/colorOrange1" />
    <!--<fragment-->
    <!--android:name="com.lecheng.hello.thirdapp.ActivityList.fragment.Frag031Blur"-->
    <!--android:layout_width="20dp"-->
    <!--android:layout_height="20dp" />-->

</LinearLayout>
