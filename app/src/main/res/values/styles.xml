<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/textGray2</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>

    <style name="style_v_line1">
        <!--横线1，粗0.8，比较黑-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/textGray1</item>
    </style>

    <style name="style_v_line2">
        <!--横线1，粗0.4，比较浅-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
        <item name="android:background">@color/text1</item>
    </style>

    <style name="style_btn_red1">
        <!--红色按钮样式-->
        <item name="android:background">@drawable/style_btn_red</item>
        <item name="android:paddingRight">@dimen/fab_margin</item>
        <item name="android:text">红色按钮</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/unit_btnheight</item>
        <item name="android:paddingLeft">@dimen/fab_margin</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:textColor">@color/white1</item>
    </style>

    <style name="style_btn_green1">
        <!--绿色按钮样式-->
        <item name="android:background">@drawable/style_btn_green</item>
        <item name="android:paddingRight">@dimen/fab_margin</item>
        <item name="android:text">绿色按钮</item>
        <item name="android:layout_height">@dimen/unit_btnheight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/fab_margin</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:textColor">@color/white1</item>
    </style>

    <style name="style_btn_blue1">
        <!--蓝色按钮样式-->
        <item name="android:background">@drawable/style_btn_blue</item>
        <item name="android:text">蓝色按钮</item>
        <item name="android:paddingRight">@dimen/fab_margin</item>
        <item name="android:paddingLeft">@dimen/fab_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/unit_btnheight</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:textColor">@color/white1</item>
    </style>

    <style name="style_ll_vertical">
        <!--通用卡片式垂直线性布局-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:background">@color/white1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
    </style>

    <style name="style_tv_screen">
        <!--显示器-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:text">这是一段默认提示</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_tv_loading">
        <!--加载中展示-->
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textGray1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:text">正在加载数据中...</item>
    </style>

    <style name="theme_AlertNoActionBarBy" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--无标题的窗口activity主题-->
        <item name="windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:backgroundDimEnabled">false</item> -->
        <!--  <item name="android:windowBackground">@null</item> --><!--除去背景色-->
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/blackOverlay</item>
    </style>

</resources>
