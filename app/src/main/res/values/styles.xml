<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/colorTextGray2</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>

    <style name="style_v_line1">
        <!--横线1，粗0.8，比较黑-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/colorTextGray1</item>
    </style>

    <style name="style_v_line2">
        <!--横线1，粗0.4，比较浅-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
        <item name="android:background">@color/colorText1</item>
    </style>

    <style name="style_btn_blue1">
        <!--绿色按钮样式-->
        <item name="android:background">@drawable/style_btn_green</item>
        <item name="android:layout_height">@dimen/Edit_height1</item>
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="style_ll_vertical">
        <!--通用卡片式垂直线性布局-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>

    </style>

    <style name="style_tv_home_title">
        <!--首页标题样式-->

        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">20dp</item>
        <!--<item name="android:gravity">center</item>-->
        <!--<item name="android:lines">2</item>-->
        <item name="android:text">...</item>
        <item name="android:textSize">16dp</item>
        <!--<item name="android:padding">@dimen/fab_margin</item>-->
    </style>

    <style name="style_tv_loading">
        <!--加载中展示-->
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextGray1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:text">正在加载数据中...</item>
    </style>

</resources>
