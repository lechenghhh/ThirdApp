<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/primary_dark_material_dark" />
            <corners android:radius="4dip" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/green2" android:startColor="@color/green2" />  <!-- 填充的颜色 -->
            <corners android:radius="4dip" /><!-- 设置矩形的四个角为弧形 --><!-- android:radius 弧形的半径 -->
        </shape>
    </item>
</selector>